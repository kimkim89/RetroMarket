<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
   
<mapper namespace="mapper.HomeMain">
	
	<!-- 메인 화면에 상품 정보 출력 (신상품)-->
	<select id="selectImageByDate" resultType="">		
		select * from product_info order by mk_register_date;		
	</select>
	
	<!-- 메인 화면에 상품 정보 출력 (할인상품)-->
	<select id="selectImageByDiscount" resultType="">		
		select * from product_info order by mk_register_date;		
	</select>

	<!-- 메인 화면에 상품 정보 출력 (인기상품)-->
	<select id="selectImageByPopularity" resultType="">		
		select * from product_info order by mk_register_date;		
	</select>

	
	
	
</mapper>